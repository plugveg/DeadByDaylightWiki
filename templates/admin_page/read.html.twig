{% extends 'base.html.twig' %}
{% block body %}
    <style>
        body{
        background-color: gray;
        }
        .centercard{
            display: block;
            margin-top: 2%;
            padding-top: 2%;
            margin-left: auto;
            margin-right: auto;
            width: 80%;
            text-align: center;
        }
    </style>

    <div class="card w-50 bg-dark centercard">
        <div class="card-body">
            <h5 class="card-title" style="color: white">Username : <h1 style="color: white">{{ user.Username }}</h1></h5>
            <p class="card-text" ><h5 style="color: white">Le/Les r√¥le(s) du User : </h5><br>
                {% for role in user.Roles %}
                    <p style="color: white">{{ role }}</p>
                {% endfor %}
            </p>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-primary">Edit Username or Delete</a>
            {% endif %}
        </div>
    </div>
{% endblock %}