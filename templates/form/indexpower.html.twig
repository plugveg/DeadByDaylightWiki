{% extends 'base.html.twig' %}{#Permet d'importer la barre de navigation et tous les paramètres du fichier base.html.twig#}

{% block title %}Ajout d'un Power{% endblock %}{#Permet de donner un titre à son onglet#}
{#HTML de la création de power#}
{% block body %}
    <style>
        /*Permet de définir le CSS de la page actuelle*/
        body{
            background-color: gray;
        }
        h1{
            text-align: center;
        }
        .formulaire{
            position: relative;
            left: 10%;
            width: 80%;
        }
    </style>

    {#Affichage du formulaire si user a le role ADMIN#}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="formulaire">
            <div class="row">
                <h2>Ajout d'un power</h2>
                {% if msg %}
                    <div class="alert alert-success">{{ msg }}</div>
                {% endif %}
                <form action="" method="POST">
                    <div class="mb-3">
                        <label for="power_name" class="form-label">Name of the power</label>
                        <input required type="text" class="form-control" id="power_name" name="power_name">
                    </div>
                    <div class="mb-3">
                        <label for="power_image" class="form-label">Power's image</label>
                        <input required type="text" class="form-control" id="power_image" name="power_image">
                    </div>
                    <div class="mb-3">
                        <label for="power_description" class="form-label">Description of the power</label>
                        <textarea required type="text" class="form-control" id="power_description" name="power_description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="power_explanation" class="form-label">Explanation of the power</label>
                        <textarea required type="text" class="form-control" id="power_explanation" name="power_explanation"></textarea>
                    </div>

                    <!--Bouton pour valider-->
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}
