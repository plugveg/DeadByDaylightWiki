{% extends 'base.html.twig' %}{#Permet d'importer la barre de navigation et tous les paramètres du fichier base.html.twig#}

{% block title %}Ajout d'un Survivor{% endblock %}{#Permet de donner un titre à son onglet#}
{#HTML de la création de survivors#}
{% block body %}
    <style>
        /*Permet de définir le CSS de la page actuelle*/
        body{
            background-color: gray;
        }
        h1{
            text-align: center;
        }
        .formulaire{
            position: relative;
            left: 10%;
            width: 80%;
        }
    </style>

    {#Affichage du formulaire si user a le role ADMIN#}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="formulaire">
            <div class="row">
                <h2>Ajout d'un survivor</h2>
                {% if msg %}
                    <div class="alert alert-success">{{ msg }}</div>
                {% endif %}
                <form action="" method="POST">
                    <div class="mb-3">
                        <label for="survivor_name" class="form-label">Name of the survivor</label>
                        <input required type="text" class="form-control" id="survivor_name" name="survivor_name">
                    </div>
                    <div class="mb-3">
                        <label for="survivor_image" class="form-label">URL for image</label>
                        <input required type="text" class="form-control" id="survivor_image" name="survivor_image">
                    </div>
                    <div class="mb-3">
                        <label for="survivor_history" class="form-label">History of the survivor</label>
                        <textarea required type="text" class="form-control" id="survivor_history" name="survivor_history"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="survivor_summary" class="form-label">Summary of the survivor</label>
                        <textarea required type="text" class="form-control" id="survivor_summary" name="survivor_summary"></textarea>
                    </div>

                    <!--Bouton pour valider-->
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}
