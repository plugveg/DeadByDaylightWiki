{% extends 'base.html.twig' %}{#Permet d'importer la barre de navigation et tous les paramètres du fichier base.html.twig#}

{% block title %}Ajout d'une Perk Survivor{% endblock %}{#Permet de donner un titre à son onglet#}
{#HTML de la création de perks survivors#}
{% block body %}
    <style>
        /*Permet de définir le CSS de la page actuelle*/
        body{
            background-color: gray;
        }
        h1{
            text-align: center;
        }
        .formulaire{
            position: relative;
            left: 10%;
            width: 80%;
        }
    </style>

    {#Affichage du formulaire si user a le role ADMIN#}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="formulaire">
            <div class="row">
                <h2>Ajout d'une perk survivor</h2>
                {% if msg %}
                    <div class="alert alert-success">{{ msg }}</div>
                {% endif %}
                <form action="" method="POST">
                    <div class="mb-3">
                        <label for="perk_name" class="form-label">Name of the perk</label>
                        <input required type="text" class="form-control" id="perk_name" name="perk_name">
                    </div>
                    <div class="mb-3">
                        <label for="perk_image" class="form-label">URL for image</label>
                        <input required type="text" class="form-control" id="perk_image" name="perk_image">
                    </div>
                    <div class="mb-3">
                        <label for="perk_explanation" class="form-label">Explanation of the perk</label>
                        <textarea required type="text" class="form-control" id="perk_explanation" name="perk_explanation"></textarea>
                    </div>
{#                    <div class="mb-3">
                        <label for="perk_survivor_id" class="form-label">Who's the survivor belong to this perk</label>
                        <select class="input--style-5" name="perk_survivor_id" style="width:100%;">
                            {% for survivor in survivors %}
                                <option>
                                    {{ survivor.id }} - {{ survivor.SurvivorName }}
                                </option>
                                <br>
                            {% endfor %}
                        </select>
                    </div>#}


                    <!--Bouton pour valider-->
                    <input type="submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}
