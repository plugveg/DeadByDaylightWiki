{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <style>
        body{
            background-color: gray;
            background-image: url("https://c.tenor.com/COkoJ2QLaTgAAAAi/dbd-game.gif");
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="..\image\logodbd.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
            DeadByDaylightWiki
        </a>
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_register') }}">Registration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div style="margin-left: 10%; color: white">
        <h1 style="margin-top: 2%; color: firebrick">Registration</h1>
        {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_row(registrationForm.username, {label : 'Username: '}) }}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password: '
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn" style="background-color: darkblue; color: white">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
