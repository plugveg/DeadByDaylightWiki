{% extends 'base.html.twig' %}

{% block title %}Survivors Page{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>This is the Survivors Page! ☠️</h1>
    <br>
    <b style="color: red">Death is not an espace ! Remember</b>
    <br>
    <br>
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Photo</th>
            <th scope="col">More Info</th>
        </tr>
        </thead>
        <tbody>
        {% for entite in Survivors %}
            <tr>
            <th scope="row">{{ entite.id }}</th>
            <td>{{ entite.SurvivorName }}</td>
            <td><img style="width: 100px" height="150px;" src="{{ entite.SurvivorImage }}"></td>
            <td>
                <form method="post" action="{{ path('survivors_read', {'id': entite.id}) }}">
                    <button class="btn" style="background-color: blue; color: white">Info about {{ entite.SurvivorName }}</button>
                </form>
            </td>

            {#        <br>
            {% for perk in entite.SurvivorPerk1 %}
                {% if perk.PerkName %}
                    <img src="{{ perk.PerkImage }}">
                {% endif %}
            {% endfor %}#}
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
