{% extends 'base.html.twig' %}

{% block title %}Hello PerksController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;  }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>This is the Survivor Perks Page! ☠️</h1>
    <br>
    <b style="color: red">Death is not an espace ! Remember</b>
    <br>
    <br>
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Photo</th>
            <th scope="col">More Info</th>
        </tr>
        </thead>
        <tbody>
        {% for entite in Perks %}
            <tr>
                <th scope="row">{{ entite.id }}</th>
                <td>{{ entite.PerkName }}</td>
                <td><img style="width: 100px" src="{{ entite.PerkImage }}"></td>
                <td>
                    <form method="post" action="{{ path('perks_read', {'id': entite.id}) }}">
                        <button class="btn" style="background-color: blue; color: white">Info about {{ entite.PerkName }}</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
