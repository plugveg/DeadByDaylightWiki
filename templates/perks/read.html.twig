{% extends 'base.html.twig' %}{#Permet d'importer la barre de navigation et tous les paramètres du fichier base.html.twig#}
{% block title %}Lecture de la perk {{ perk.PerkName }}{% endblock %}{#Permet de donner un titre à son onglet#}
{% block body %}
    <style>
        /*Permet de définir le CSS de la page actuelle*/
        .center{
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 30%;
            height: 30%;
        }
        .centercard{
            display: block;
            margin-top: 2%;
            padding-top: 2%;
            margin-left: auto;
            margin-right: auto;
            width: 80%;
            text-align: center;
        }
    </style>
    {#Permet l'affichage du contenu de la page#}
    <div class="card text-white bg-dark mb-3 centercard">
        <img class="card-img-top center" src="{{ perk.PerkImage }}" alt="Card image cap" >
        <div class="card-body">
            <h1 class="card-title">{{ perk.PerkName }}</h1>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><h5>Perk Explanation : </h5><br>{{ perk.PerkExplanation | nl2br }}</li>
        </ul>
        <div class="card-body">
            {#Redirection vers le formulaire d'edit si on est ADMIN#}
            {% if is_granted('ROLE_ADMIN') %}
                <a class="card-link" href="{{ path('perks_edit', {'id': perk.id}) }}">Edit the perk</a>
            {% endif %}
        </div>
    </div>
{% endblock %}